<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarStyle="outsideOverlay"
    tools:context=".MainActivity" >

	<EditText
		android:id="@+id/editText1"
        android:layout_width="match_parent"
               android:layout_height="175dp"
               android:clickable="false"
               android:ems="10"
               android:enabled="true"
               android:gravity="top"
               android:inputType="textMultiLine"
               android:scrollHorizontally="false"
               android:scrollbarAlwaysDrawVerticalTrack="true"
               android:scrollbars="vertical"
               android:textAllCaps="false"
               android:textSize="12sp"
               android:typeface="monospace" >
                <requestFocus />
            </EditText>
    
	<Button
        android:id="@+id/create_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:onClick="createDB"
        android:text="@string/create_db_btn" />

	   <Button
        android:id="@+id/dumpdb_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/create_btn"
        android:layout_alignBottom="@+id/create_btn"
        android:layout_toRightOf="@+id/create_btn"
        android:onClick="@string/dump_db_action"
        android:text="@string/show_db_btn" />
	   	
    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dumpdb_btn"
        android:layout_alignBottom="@+id/dumpdb_btn"
        android:layout_toRightOf="@+id/dumpdb_btn"
        android:onClick="allDone"
        android:text="@string/back_btn" />

    <Button
        android:id="@+id/copydb_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/create_btn"
        android:layout_alignLeft="@+id/create_btn"
        android:onClick="@string/copy_real_db_action"
        android:text="@string/copy_real_db_btn" />
    
</RelativeLayout>